            android:gravity="center">

        </RelativeLayout>

    </RelativeLayout>

    <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
        android:id="@+id/ball_and_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ballScrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/myborder_2">

        <RelativeLayout
            android:id="@+id/gameid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/select"
            android:layout_toRightOf="@+id/select">

            <TextView
                android:id="@+id/game_id"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/flag"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="23sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
            android:id="@+id/select"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ballScrollView"
            android:layout_marginLeft="5dp">

            <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/relativeLayout22"
                android:layout_toStartOf="@+id/relativeLayout22">

                <Button
                    android:id="@+id/left_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/relativeLayout22"
                    android:layout_toStartOf="@+id/relativeLayout22"
                    android:background="@drawable/btn_left" />
        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>

            <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/relativeLayout22"
                android:layout_toRightOf="@+id/relativeLayout22">

                <Button
                    android:id="@+id/right_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/relativeLayout22"
                    android:layout_toRightOf="@+id/relativeLayout22"
                    android:background="@drawable/btn_right"
                    android:elevation="0dp"
                    tools:ignore="UnusedAttribute" />
        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>

            <cn.gavinliu.android.lib.scale.ScaleRelativeLayout
                android:id="@+id/relativeLayout22"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bn_mid">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>

        </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>
    </cn.gavinliu.android.lib.scale.ScaleRelativeLayout>

    <HorizontalScrollView
        android:id="@+id/ballScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:orientation="horizontal"
            tools:ignore="ObsoleteLayoutParam">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_mlb"
                android:padding="5dp"
                android:text="棒球"

                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_nba"
                android:padding="5dp"
                android:text="籃球"

                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_foot"
                android:padding="5dp"
                android:text="足球"

                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_pan"
                android:padding="5dp"
                android:text="網球"

                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_usafoot"
                android:padding="5dp"
                android:text="美式足球"

                tools:ignore="ButtonStyle,HardcodedText" />


            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/myborder_1"
                android:drawableTop="@drawable/icon_ice"
                android:padding="5dp"
                android:text="冰球"

                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
